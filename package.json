{
  "name": "ci-cd-monorepo",
  "private": true,
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && yarn git-cz --hook"
    }
  },
  "scripts": {
    "ci:build": "lerna run build",
    "ci:test": "lerna run ci:test",
    "ci:publish": "lerna run ci:publish"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "cz-conventional-changelog": "^3.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2"
  },
  "dependencies": {
    "commitizen": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
